<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.1">
  <name>Hindi Parliamentary (5 minutes)</name>
  <short-name>BP (5 minutes)</short-name>
  <info>
    <region>India</region>
    <level>University</level>
    <used-at>Delhi University/Opens</used-at>
    <used-at>Delhi</used-at>
    <description>Two teams of two, 5-minute speeches, Question Answer and Reply Speech</description>
  </info>
  <prep-time length="15:00"/>
  <speech-types>
    <speech-type ref="all" length="5:00" first-period="normal">
      <bell time="3:00" number="1" next-period="pois-allowed"/>
      <bell time="4:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="all">
      <name>Prime Minister</name>
    </speech>
    <speech type="all">
      <name>Leader of the Opposition</name>
    </speech>
    <speech type="all">
      <name>Deputy Prime Minister</name>
    </speech>
    <speech type="all">
      <name>Deputy Leader of the Opposition</name>
    </speech>
    <speech type="all">
      <name>Member for the Government</name>
    </speech>
    <speech type="all">
      <name>Member for the Opposition</name>
    </speech>
    <speech type="all">
      <name>Government Whip</name>
    </speech>
    <speech type="all">
      <name>Opposition Whip</name>
    </speech>
  </speeches>
</debate-format>
